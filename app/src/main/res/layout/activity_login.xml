<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_x"
    tools:context="com.likeit.sous_vide.ui.LoginActivity">

    <RelativeLayout
        android:id="@+id/rl_header"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_header_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dip"
            android:padding="5dip"
            android:src="@mipmap/icon_preson01"  />

        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:maxLength="10"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="28sp" />


        <ImageView
            android:id="@+id/iv_header_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dip"
            android:padding="5dip"
            android:src="@mipmap/icon_nav_add" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_tv_connet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_xxlarge"
            android:layout_marginRight="@dimen/dip_xxlarge"
            android:layout_marginTop="40dip"
            android:background="@drawable/button_blue_bg"
            android:gravity="center"
            android:padding="12dip"
            android:text="+ Connect device"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_xxhdpi" />

        <TextView
            android:id="@+id/login_tv_skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip_xxlarge"
            android:layout_marginRight="@dimen/dip_xxlarge"
            android:layout_marginTop="40dip"
            android:background="@drawable/button_orange_bg"
            android:gravity="center"
            android:padding="12dip"
            android:text="Skip"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_xxhdpi" />
    </LinearLayout>
</RelativeLayout>
