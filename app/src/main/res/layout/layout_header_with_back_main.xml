<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_header"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:background="@color/header_bg"
    android:orientation="vertical">

    <View
        android:id="@+id/header_line"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/header_bg" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="60.0dip"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/header_back_bg"
        android:drawableLeft="@drawable/header_back"
        android:drawableStart="@drawable/header_back"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:maxLength="8"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_normal" />


    <RelativeLayout
        android:id="@+id/rl_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:padding="10dip"
        android:layout_marginRight="20dip">

        <TextView
            android:id="@+id/tv_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLength="8"
            android:text="℃"
            android:padding="5dip"
            android:layout_toLeftOf="@+id/tv_right03"
            android:textSize="@dimen/text_size_title" />
        <TextView
            android:id="@+id/tv_right03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_f"
            android:maxLength="8"
            android:text="/"
            android:gravity="center"
            android:textSize="@dimen/text_size_title" />
        <TextView
            android:id="@+id/tv_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:maxLength="8"
            android:padding="5dip"
            android:text="℉"
            android:textSize="@dimen/text_size_title" />
    </RelativeLayout>

</RelativeLayout>